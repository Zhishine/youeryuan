<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 
    android:id="@+id/root"
   
    >
<FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <RelativeLayout android:id="@+id/top_bg"
       android:layout_width="match_parent"
       android:layout_height="54dp"
       android:layout_gravity="top"
       android:layout_marginTop="0dp"
       >
       <ImageView android:id="@+id/back" 
           android:layout_width="54dp" 
           android:layout_height="54dp"
           android:layout_alignParentTop="true"
           android:layout_alignParentLeft="true"
           android:background="@drawable/back1"/>

  <ImageView android:id="@+id/expand" 
           android:layout_width="54dp" 
           android:layout_height="54dp"
          
           android:layout_alignParentTop="true"
           android:layout_alignParentRight="true"
           android:background="@drawable/expand2"/>
  </RelativeLayout>  
 <LinearLayout
      android:id="@+id/gallery_container"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:clickable="true"
        android:layout_gravity="top"
       android:layout_marginTop="56dp"
       >
       <com.youer.view.PhotoGallery
            android:id="@+id/banner_gallery"
            android:layout_gravity="center|center"
             android:gravity="center|center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:soundEffectsEnabled="false"
            android:keepScreenOn="true"
            android:background="#000"
            android:fadingEdgeLength="0.0dp"
            android:spacing="2dp"
            android:clickable="false"
             />

       
     
 </LinearLayout>
 
  
</FrameLayout>
<LinearLayout android:id="@+id/popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<LinearLayout 
   
    android:layout_width="142dp"
    android:layout_height="161dp"
    android:orientation="vertical" 

    android:layout_marginTop="57dp"
    android:layout_marginRight="2dp"
    android:layout_gravity="right"
    >
 <LinearLayout   
    android:id="@+id/share_container" 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
   
      android:layout_weight="1"
    >
  <ImageView
                    android:id="@+id/share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    />
  <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@android:color/white"
      android:textSize="17sp"
      android:layout_gravity="center" 
     />
</LinearLayout>

   

  <ImageView
                 
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                     /> 
 
 <LinearLayout   
    android:id="@+id/download_container" 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 

    android:layout_weight="1"
    >
  <ImageView
                    android:id="@+id/download"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                />
  <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@android:color/white"
      android:textSize="17sp"
      android:layout_gravity="center" 
     />
</LinearLayout>

</LinearLayout>

</LinearLayout>
</FrameLayout>